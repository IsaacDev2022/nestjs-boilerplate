{
  "name": "--",
  "version": "0.0.1",
  "description": "--",
  "author": "--",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"libs/**/*.ts\"",
    "start": "node dist/main",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -f ./src/configs/orm.config.ts",
    "migration:generate": "npm run typeorm migration:generate -- -n",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert",
    "seed:config": "ts-node ./node_modules/typeorm-seeding/dist/cli.js config -n ./src/configs/orm.config.ts",
    "seed:run": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed -n ./src/configs/orm.config.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.6.0",
    "@nestjs/common": "8.1.2",
    "@nestjs/config": "1.1.0",
    "@nestjs/core": "8.1.2",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-express": "8.1.2",
    "@nestjs/serve-static": "^2.1.4",
    "@nestjs/swagger": "5.1.4",
    "@nestjs/typeorm": "8.0.2",
    "@types/passport-jwt": "^3.0.6",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "date-fns": "^2.25.0",
    "dotenv": "^10.0.0",
    "faker": "^5.5.3",
    "faker-br": "^0.4.1",
    "handlebars": "^4.7.7",
    "husky": "7.0.4",
    "lint-staged": "11.2.6",
    "nestjs-typeorm-paginate": "^3.1.2",
    "nodemailer": "^6.7.0",
    "organize-imports-cli": "^0.8.0",
    "passport": "^0.5.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "7.4.0",
    "rxjs-compat": "^6.6.7",
    "swagger-ui-express": "^4.1.6",
    "tslint": "^6.1.3",
    "typeorm": "^0.2.25",
    "typeorm-encrypted": "^0.5.6",
    "typeorm-seeding": "^1.6.1",
    "yarn-check": "^0.0.3"
  },
  "devDependencies": {
    "@nestjs/cli": "8.1.4",
    "@nestjs/schematics": "8.0.4",
    "@nestjs/testing": "8.1.2",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.5.9",
    "@types/jest": "^27.0.2",
    "@types/node": "16.11.6",
    "@types/nodemailer": "^6.4.4",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.3.1",
    "prettier": "2.4.1",
    "supertest": "6.1.6",
    "ts-jest": "^27.0.5",
    "ts-loader": "9.2.6",
    "ts-node": "10.4.0",
    "tsconfig-paths": "3.11.0",
    "typescript": "4.4.4"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "organize-imports-cli",
      "yarn lint",
      "yarn format"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "modules/**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/",
      "<rootDir>/../libs/"
    ],
    "moduleNameMapper": {
      "^@app/swagger-decorators(|/.*)$": "<rootDir>/libs/swagger-decorators/src/$1"
    }
  }
}
